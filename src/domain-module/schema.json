{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsDomainModule",
  "title": "Domain Module Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the domain module.",
      "type": "string",
      "x-prompt": "What is name of domain module?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the service.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": [
    "name"
  ]
}